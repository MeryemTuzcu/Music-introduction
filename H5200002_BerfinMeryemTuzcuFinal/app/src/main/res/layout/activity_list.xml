<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imgInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ListActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/activity_list_image_width"
        android:layout_height="@dimen/activity_list_image_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bilgilendirme" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvSongs"
        android:layout_width="@dimen/activity_list_rcy_width"
        android:layout_height="@dimen/activity_list_rcy_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:itemCount="8"
        tools:listitem="@layout/cardview_song" />


</androidx.constraintlayout.widget.ConstraintLayout>
